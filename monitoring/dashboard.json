{
    "dashboard": {
        "title": "TechCommerce Monitoring Dashboard",
        "tags": [
            "techcommerce",
            "microservices"
        ],
        "timezone": "browser",
        "panels": [
            {
                "id": 1,
                "title": "Request Rate",
                "type": "graph",
                "targets": [
                    {
                        "expr": "rate(http_requests_total[5m])",
                        "legendFormat": "{{job}}"
                    }
                ]
            },
            {
                "id": 2,
                "title": "Error Rate %",
                "type": "graph",
                "targets": [
                    {
                        "expr": "rate(http_requests_total{status=~\"5..\"}[5m]) / rate(http_requests_total[5m]) * 100",
                        "legendFormat": "{{job}}"
                    }
                ]
            },
            {
                "id": 3,
                "title": "Response Time (95th percentile)",
                "type": "graph",
                "targets": [
                    {
                        "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket[5m]))",
                        "legendFormat": "{{job}}"
                    }
                ]
            },
            {
                "id": 4,
                "title": "Pod Restarts",
                "type": "graph",
                "targets": [
                    {
                        "expr": "rate(kube_pod_container_status_restarts_total[10m])",
                        "legendFormat": "{{pod}}"
                    }
                ]
            }
        ]
    }
}